package main

templ newUserForm(){
    <div class="new-user-form">
        <form
			mx-target="#new-user-form"
            hx-post="/api/users"
            hx-ext="json-enc"
        >
            <input
                type="text"
                name="user_name"
                placeholder="Name"
                size="50"
            />
            <input
                type="email"
                name="user_email"
                placeholder="user@example.com"
                size="50"
            />
            <button type="submit">Create Account!</button>
        </form>
    </div>
}

templ loginForm(){
    <div class="login-form">
        <form
			mx-target="#login-form"
            hx-post="/api/logins"
            hx-ext="json-enc"
        >
            <input
