templ newRecipeForm(){
    <div class="new-recipe-form">
        <form
			hx-target="#recipes-list"
            hx-post="/api/recipes"
            hx-ext="json-enc"
        ><br>
            <input
                type="text"
                name="recipe_name"
                placeholder="Name"
                size="64"
            /><br>
            <textarea
                type="text"
                name="recipe_desc"
                placeholder="Write something about the recipe!"
                rows="4"
				cols="70"
            /><br>
            <input
                type="text"
                name="recipe_link"
                placeholder="Where can I read the recipe? Ideally on https://pragmatic.recepies/"
                size="64"
            /><br>
            <button type="submit">Create Recipe!</button>
        </form>
    </div>
}
